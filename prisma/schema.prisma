  @@map("ticket_tags")
}

// Custom attributes for tickets (similar to ClickUp custom fields)
model TicketAttribute {
  id          String   @id @default(uuid()) @db.Uuid
  ticketId    String   @map("ticket_id") @db.Uuid
  name        String
