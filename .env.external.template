# External Services Configuration
# Copy these values to your .env file.
# These values match the defaults that were previously in docker-compose.yml.
# Replace 'localhost' or 'host.docker.internal' with the actual IP/hostname of your external services.

# PostgreSQL Configuration
# IF running locally (e.g. valid for host machine access):
# DATABASE_URL=postgres://postgres:postgres@host.docker.internal:8229/postgres
# IF running on another server:
DATABASE_URL=postgres://postgres:postgres@<EXTERNAL_HOST>:5432/postgres

# PostgREST Configuration
# Needs to match the credentials above
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
# URI used by the PostgREST service to connect to the DB
PGRST_DB_URI=postgres://postgres:postgres@<EXTERNAL_HOST>:5432/postgres

# MinIO Configuration
# IMPORTANT: MINIO_ENDPOINT must be a full URL including protocol and port (if not 80/443).
# Example: http://192.168.1.50:9000

# IF running locally (e.g. valid for host machine access):
# MINIO_ENDPOINT=http://host.docker.internal:8329
# IF running on another server:
MINIO_ENDPOINT=http://<EXTERNAL_HOST>:9000

# Legacy port variable (still good to keep for compatibility)
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Note: 'host.docker.internal' allows the container to talk to the host machine on Windows/Mac.
# If your external services are on the SAME machine but outside Docker, use host.docker.internal.
