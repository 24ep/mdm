# ==============================================
# Unified Data Platform - Environment Configuration
# ==============================================

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
NODE_ENV=production
# Port for the Next.js application
PORT=8029
# Public URL for the API (client-side access)
NEXT_PUBLIC_API_URL=http://localhost:8129

# ----------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------
# Connection string for Prisma and Application
# Format: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres

# ----------------------------------------------
# Authentication (NextAuth.js)
# ----------------------------------------------
# Steps to generate secrets: `openssl rand -base64 32`
NEXTAUTH_URL=http://localhost:8029
NEXTAUTH_SECRET=change_me_to_a_secure_random_string_at_least_32_chars
# Key for encrypting sensitive data in the database (at rest)
ENCRYPTION_KEY=00112233445566778899aabbccddeeff00112233445566778899aabbccddeeff

# ----------------------------------------------
# Object Storage (MinIO)
# ----------------------------------------------
# Endpoint for S3-compatible storage
# IF running locally with Docker: http://minio:9000
# IF running external/host: http://localhost:9000 or http://<external-ip>:9000
MINIO_ENDPOINT=http://localhost:9000
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
# Public endpoint if different (for client-side uploads/reads if enabled)
# NEXT_PUBLIC_MINIO_ENDPOINT=http://localhost:9000

# ----------------------------------------------
# PostgREST (API Layer)
# ----------------------------------------------
# JWT Secret for PostgREST authentication (should match signed tokens or be empty for dev)
PGRST_JWT_SECRET=

# ----------------------------------------------
# Cache & Rate Limiting (Redis)
# ----------------------------------------------
# Redis connection string
REDIS_URL=redis://:redispassword@localhost:6379
REDIS_PASSWORD=redispassword

# ----------------------------------------------
# Security & Secrets Management (Vault)
# ----------------------------------------------
# Enable HashiCorp Vault integration
USE_VAULT=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_SECRET_MOUNT=secret

# ----------------------------------------------
# Plugins System
# ----------------------------------------------
USE_PLUGIN_HUB=false
PLUGIN_HUB_URL=http://localhost:3001

# ==============================================
# Integrations (Fallback Configuration)
# Note: These settings are primarily managed via the Admin UI (System Settings > Integrations).
# Values set here act as initial setup defaults or fallbacks if the database config is missing.
# ==============================================

# ----------------------------------------------
# SSO Providers
# ----------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Azure AD / Microsoft Entra ID
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# ----------------------------------------------
# LLM Tracing (Langfuse)
# ----------------------------------------------
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ----------------------------------------------
# Email (SMTP)
# ----------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
